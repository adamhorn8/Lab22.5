@{
    ViewBag.Title = "Home Page";
}

<form action="~/Home/Login" method="post">

    <label for="userName"></label>
    <input type="text" id="userName" class="form-control" name="userName" placeholder="Pick a Username" />

    <label for="password"></label>
    <input type="text" id="password" class="form-control" name="password" placeholder="Pick a Password" />

    <label for="color"></label>
    <select class="form-control" name="selectColor">
        <option value=""> </option>
        <option value="Red">Red</option>
        <option value="Green">Green</option>
        <option value="Blue">Blue</option>
    </select>
    <button type="submit" class="btn btn-default">Submit</button>

</form>